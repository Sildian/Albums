<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_list_songs_image"
        android:layout_width="@dimen/image_size_medium"
        android:layout_height="@dimen/image_size_medium"
        android:layout_margin="@dimen/margin_medium"
        tools:srcCompat="@drawable/ic_album"
        android:contentDescription="@string/image_content_description_song"/>

    <TextView
        android:id="@+id/item_list_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textSize="@dimen/text_size_medium"
        tools:text="Metallica"/>

</LinearLayout>